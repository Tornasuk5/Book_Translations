<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pag_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:id="@+id/textPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgAddPag"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:tint="@color/white"
                android:src="@drawable/add_pag"/>

            <TextView
                android:id="@+id/textNumTraslations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/imgPgNumTranslations"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgPgNumTranslations"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/blue"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/translation3"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>